<style>
.box {
  position: relative;
  width: 600px;
  height: 800px;
}
.center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.sepia {
  filter: sepia(70%);
}
</style>

<p id="notice"><%= notice %></p>

<div class="box">
  <div class="center">
    <img src="/frame.jpg"/>
  </div>
  <div class="center sepia">
    <%= image_tag @photo.source %>
  </div>
</div>

<% if can_view_photo?(@photo) %>
  <%= image_tag @photo.url %>
<% else %>
  <p>You don't have permission to view this photo.</p>
<% end %>
